<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.11.0.xsd">
    <logging>WARN</logging>
    <!--数据库配置信息-->
    <jdbc>
        <driver>com.mysql.jdbc.Driver</driver>
        <url>jdbc:mysql://localhost:3306/test?useUnicode=true&amp;characterEncoding=utf8&amp;autoReconnect=true&amp;rewriteBatchedStatements=TRUE&amp;useSSL=false&amp;serverTimezone=UTC</url>
        <user>guide</user>
        <password>Z..li1zh@u1!!</password>
    </jdbc>
    <generator>
        <strategy>
            <name>com.github.yogurt.cg.JooqGeneratorStrategy</name>
        </strategy>
        <database>
            <name>org.jooq.meta.mysql.MySQLDatabase</name>
            <!--表名-->
            <includes>learn</includes>
            <!--数据库名-->
            <inputSchema>test</inputSchema>
            <outputSchemaToDefault>true</outputSchemaToDefault>
            <forcedTypes>
                <forcedType>
                    <name>BOOLEAN</name>
                    <expression>is_deleted</expression>
                </forcedType>

                <!-- 如果有枚举类型，需要手动设置Enum相关信息 -->
                <forcedType>
                    <enumConverter>true</enumConverter>
                    <userType>com.klaus.iv.stockadmin.enums.TypeEnum</userType>
                    <!--匹配某表某列-->
                    <expression>.*\.test\.type</expression>
                    <types>.*</types>
                </forcedType>
            </forcedTypes>
        </database>

        <target>
            <!--包名-->
            <packageName>com.klaus.iv.stockadmin</packageName>
            <directory>src/main/java</directory>
            <!--是否删除文件夹中已有文件-->
            <clean>false</clean>
        </target>
        <generate>
            <daos>true</daos>
            <records>false</records>
            <globalObjectReferences>false</globalObjectReferences>
            <generatedAnnotation>false</generatedAnnotation>
            <indexes>false</indexes>
            <relations>false</relations>
            <tables>false</tables>
            <javaTimeTypes>true</javaTimeTypes>
        </generate>
    </generator>
</configuration>